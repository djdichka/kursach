<Window x:Class="Tours.AddClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить клиента" Height="300" Width="300">
    <Grid>
        <TextBox x:Name="tbName" HorizontalAlignment="Left" Height="23" Margin="143,20,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="130" TextChanged="tbName_TextChanged"/>
        <TextBox x:Name="tbAdress" HorizontalAlignment="Left" Height="23" Margin="143,68,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="130" TextChanged="tbAdress_TextChanged"/>
        <TextBox x:Name="tbNumber" HorizontalAlignment="Left" Height="23" Margin="143,117,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="130" TextChanged="tbNumber_TextChanged"/>
        <Button x:Name="btnSave" Content="Сохранить" HorizontalAlignment="Left" Margin="25,241,0,0" VerticalAlignment="Top" Width="75" Click="btnSave_Click"/>
        <Button x:Name="btnCancel" Content="Отмена" HorizontalAlignment="Left" Margin="198,241,0,0" VerticalAlignment="Top" Width="75" Click="btnCancel_Click"/>
        <Label Content="Имя клиента" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top"/>
        <Label Content="Адрес" HorizontalAlignment="Left" Margin="10,68,0,0" VerticalAlignment="Top"/>
        <Label Content="Контактные номер" HorizontalAlignment="Left" Margin="10,117,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
